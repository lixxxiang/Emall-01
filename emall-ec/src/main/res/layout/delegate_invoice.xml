<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="#FFFFFF"
        android:elevation="4dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/invoice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/ll_bar"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/invoice_title"
            android:textColor="#686868"
            android:textSize="14dp" />
    </android.support.v7.widget.Toolbar>
    <com.example.emall_core.util.view.BounceScrollView
        android:layout_below="@+id/invoice_toolbar"
        android:layout_width="match_parent"
        android:background="#F0F0F0"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票信息（增值税专用发票）"
                    android:textColor="#B80017"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票抬头："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>

                <com.example.emall_core.util.view.EditTextWithDeleteButton
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textCursorDrawable="@null"
                    android:hint="请输入单位名称"
                    android:textColor="#9B9B9B"
                    android:layout_marginRight="14dp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纳税人识别号："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
                <com.example.emall_core.util.view.EditTextWithDeleteButton
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="116dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textCursorDrawable="@null"
                    android:hint="请输入纳税人识别号"
                    android:textColor="#9B9B9B"
                    android:layout_marginRight="14dp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册地址："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
                <com.example.emall_core.util.view.EditTextWithDeleteButton
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textCursorDrawable="@null"
                    android:hint="请输入注册地址"
                    android:textColor="#9B9B9B"
                    android:layout_marginRight="14dp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册电话："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
                <com.example.emall_core.util.view.EditTextWithDeleteButton
                    android:id="@+id/tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textCursorDrawable="@null"
                    android:hint="请输入注册电话"
                    android:textColor="#9B9B9B"
                    android:digits="1234567890"
                    android:layout_marginRight="14dp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户银行："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
                <com.example.emall_core.util.view.EditTextWithDeleteButton
                    android:id="@+id/bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textCursorDrawable="@null"
                    android:hint="请输入开户银行"
                    android:textColor="#9B9B9B"
                    android:layout_marginRight="14dp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户账号："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
                <com.example.emall_core.util.view.EditTextWithDeleteButton
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textCursorDrawable="@null"
                    android:hint="请输入开户账号"
                    android:digits="1234567890"
                    android:textColor="#9B9B9B"
                    android:layout_marginRight="14dp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票金额："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#F0F0F0"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收票地址"
                    android:textColor="#B80017"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
                <com.example.emall_core.util.view.EditTextWithDeleteButton
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textCursorDrawable="@null"
                    android:hint="必填"
                    android:textColor="#9B9B9B"
                    android:layout_marginRight="14dp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
                <com.example.emall_core.util.view.EditTextWithDeleteButton
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textCursorDrawable="@null"
                    android:hint="必填"
                    android:textColor="#9B9B9B"
                    android:layout_marginRight="14dp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地区："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址："
                    android:textColor="#4A4A4A"
                    android:textSize="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"/>
                <com.example.emall_core.util.view.EditTextWithDeleteButton
                    android:id="@+id/address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textCursorDrawable="@null"
                    android:hint="必填"
                    android:textColor="#9B9B9B"
                    android:layout_marginRight="14dp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:background="#DCDCDC"/>
        </LinearLayout>

    </com.example.emall_core.util.view.BounceScrollView>
</RelativeLayout>