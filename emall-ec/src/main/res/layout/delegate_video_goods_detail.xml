<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <ScrollView
        android:id="@+id/video_goods_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/video_goods_detail_title_image"
                android:layout_width="match_parent"
                android:layout_height="255dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="#615243"></RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:background="#6152aa"></RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#61aa52"></RelativeLayout>
            <com.baidu.mapapi.map.MapView
                android:id="@+id/video_detail_map"
                android:layout_width="match_parent"
                android:layout_height="259dp"
                android:clickable="true" />
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/video_goods_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">
        <!--<android.support.v7.widget.AppCompatButton-->
            <!--android:id="@+id/video_goods_detail_back_btn"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_marginTop="18dp"-->
            <!--android:layout_marginLeft="18dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="@drawable/ic_back_small_dark"-->
            <!--android:layout_height="wrap_content" />-->

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tl_6"
            android:layout_width="184dp"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            tl:tl_iconVisible="false"
            tl:tl_indicator_corner_radius="1.5dp"
            tl:tl_indicator_height="3dp"
            tl:tl_indicator_width="50dp"
            tl:tl_indicator_color="#B4A078"
            tl:tl_textSelectColor="#B4A078"
            tl:tl_textUnselectColor="#4A4A4A"
            tl:tl_tab_space_equal="true"
            tl:tl_textsize="16sp"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#1233ff"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/video_goods_buy_now_btn"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>
</RelativeLayout>