<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">
    <View
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="#FFFFFF"
        android:elevation="4dp"/>
    <ScrollView
        android:layout_below="@+id/order_detail_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#F0F0F0"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="164dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#E0E0E0"
                    android:layout_alignParentTop="true"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B80017"
                    android:textSize="12dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#E0E0E0"
                    android:layout_marginLeft="13dp"
                    android:layout_below="@+id/order_detail_state_tv"
                    android:layout_marginTop="14dp"/>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/order_detail_image_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_below="@+id/order_detail_state_tv"
                    android:layout_marginTop="34dp"
                    android:layout_marginLeft="15dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#5C5C5C"
                    android:layout_toRightOf="@+id/order_detail_image_iv"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@+id/order_detail_state_tv"
                    android:layout_marginTop="34dp" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#9B9B9B"
                    android:layout_below="@+id/order_detail_state_tv"
                    android:layout_marginTop="57dp"
                    android:layout_toRightOf="@+id/order_detail_image_iv"
                    android:layout_marginLeft="14dp" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#5C5C5C"
                    android:layout_below="@+id/order_detail_state_tv"
                    android:layout_marginTop="97dp"
                    android:layout_toRightOf="@+id/order_detail_image_iv"
                    android:layout_marginLeft="14dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#F0F0F0"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="253dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9B9B9B"
                    android:textSize="12dp"
                    android:text="@string/order_id"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="11dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5C5C5C"
                    android:textSize="12dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="11dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9B9B9B"
                    android:textSize="12dp"
                    android:text="@string/order_time"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_order_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5C5C5C"
                    android:textSize="12dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="40dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#E0E0E0"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="71dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9B9B9B"
                    android:textSize="12dp"
                    android:layout_marginTop="88dp"
                    android:text="@string/pay_method"
                    android:layout_marginLeft="15dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_pay_method_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5C5C5C"
                    android:textSize="12dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="88dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9B9B9B"
                    android:textSize="12dp"
                    android:layout_marginTop="117dp"
                    android:text="@string/original_price"
                    android:layout_marginLeft="15dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_origional_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5C5C5C"
                    android:textSize="12dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="117dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9B9B9B"
                    android:textSize="12dp"
                    android:layout_marginTop="150dp"
                    android:text="@string/current_price"
                    android:layout_marginLeft="15dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_current_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5C5C5C"
                    android:textSize="12dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="150dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#E0E0E0"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="177dp"/>


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9B9B9B"
                    android:textSize="12dp"
                    android:layout_marginTop="194dp"
                    android:text="@string/discount"
                    android:layout_marginLeft="15dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_discount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5C5C5C"
                    android:textSize="12dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="194dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B80017"
                    android:textSize="12dp"
                    android:layout_marginTop="221dp"
                    android:text="@string/out_of_pocket"
                    android:layout_marginLeft="15dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_detail_final_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B80017"
                    android:textSize="12dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="221dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#F0F0F0"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="93dp">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9B9B9B"
                    android:textSize="12dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/service_time"
                    android:layout_marginLeft="15dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5C5C5C"
                    android:textSize="12dp"
                    android:text="@string/service_time_detail"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="15dp"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <android.support.v7.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/order_detail_btn_border_shape" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:id="@+id/order_detail_tel_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="16dp"
                                android:text="@string/tel"/>
                            <TextView
                                android:layout_toRightOf="@+id/order_detail_tel_tv"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textColor="#666666"
                                android:text="@string/tel_service" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="9dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <android.support.v7.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/order_detail_btn_border_shape" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:id="@+id/order_detail_qq_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="16dp"
                                android:text="@string/qq"/>
                            <TextView
                                android:layout_toRightOf="@+id/order_detail_qq_tv"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textColor="#666666"
                                android:text="@string/tel_service" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.Toolbar
        android:layout_below="@+id/ll_bar"
        android:id="@+id/order_detail_list_toolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/order_detail"
            android:textSize="14dp"
            android:textColor="#686868"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <android.support.v7.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="107dp"
            android:textSize="12dp"
            android:textColor="#B80017"
            android:text="@string/to_download"
            android:background="@drawable/order_detail_btn_red_border_shape"
            />
        <android.support.v7.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:textSize="12dp"
            android:textColor="#666666"
            android:text="@string/delete_order"
            android:background="@drawable/order_detail_btn_border_shape"
            />
    </RelativeLayout>
</RelativeLayout>
