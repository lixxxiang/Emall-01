<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123456"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_index"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_index"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/transparent">
        <!--app:layout_behavior="com.flj.latte.ec.main.index.TranslucentBehavior"-->


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/icon_index_scan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="{fa-bullhorn}"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <!--<android.support.v7.widget.AppCompatImageView-->
                <!--android:id="@+id/et_search_view"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="6"-->
                <!--android:background="@drawable/home_search_background"-->
                <!--android:gravity="center_vertical"-->
                <!--android:hint="搜索"-->
                <!--android:paddingLeft="20dp" />-->

            <TextView
                android:id="@+id/edt_search"
                android:layout_width="0.0dp"
                android:layout_height="31dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="6"
                android:drawablePadding="10dp"
                android:background="@drawable/style_home_pager_toolbar_search_view"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:hint="这里是一些字体"
                android:lines="1"
                android:paddingLeft="12dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffdebd"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/icon_index_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="{fa-bullhorn}"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.CoordinatorLayout>