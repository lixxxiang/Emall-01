<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="#FFFFFF"
        android:elevation="4dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/fill_order_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/ll_bar"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fill_order"
            android:textColor="#686868"
            android:textSize="14dp" />
    </android.support.v7.widget.Toolbar>

    <com.example.emall_core.util.view.BounceScrollView
        android:layout_below="@+id/fill_order_toolbar"
        android:layout_width="match_parent"
        android:background="#F0F0F0"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#FFFFFF">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coupon"
                    android:textSize="12dp"
                    android:textColor="#5C5C5C"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"/>
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_foward"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:layout_alignParentRight="true"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="13dp"
                    android:background="#E0E0E0"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="#FFFFFF">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/fill_order_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="sdfsfsdfsd"
                    android:textColor="#5C5C5C"
                    android:layout_toRightOf="@+id/fill_order_iv"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_alignTop="@id/fill_order_iv"
                    android:id="@+id/fill_order_title_tv"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="sdfsfsdfsdfdfsfsdfs"
                    android:layout_marginRight="14dp"
                    android:textColor="#9B9B9B"
                    android:layout_toRightOf="@+id/fill_order_iv"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@id/fill_order_title_tv"
                    android:layout_marginTop="6dp"
                    android:id="@+id/fill_order_time_tv"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#F0F0F0"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:background="#FFFFFF">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#9B9B9B"
                    android:text="@string/original_price_"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="@string/test_price"

                    android:textColor="#5C5C5C"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="14dp"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#9B9B9B"
                    android:text="@string/current_price_"
                    android:layout_marginTop="43dp"
                    android:layout_marginLeft="15dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#5C5C5C"
                    android:text="@string/test_price"

                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="43dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="13dp"
                    android:background="#E0E0E0"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:background="#FFFFFF">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#9B9B9B"
                    android:text="@string/discount_"

                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#5C5C5C"
                    android:text="@string/test_price"

                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="14dp"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#B80017"
                    android:text="@string/out_of_pocket_"
                    android:layout_marginTop="43dp"
                    android:layout_marginLeft="15dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#B80017"
                    android:text="@string/test_price"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="43dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="13dp"
                    android:background="#E0E0E0"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_height="43dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_centerVertical="true" />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invoice"
                    android:textSize="12dp"
                    android:textColor="#5C5C5C"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"
                    />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_foward"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        
    </com.example.emall_core.util.view.BounceScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="4dp"
        android:background="#FFFFFF">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:textColor="#B80017"
                android:text="f sf af sdf sd " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>